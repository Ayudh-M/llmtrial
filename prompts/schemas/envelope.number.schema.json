{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Agent Envelope (number tasks)",
  "type": "object",
  "required": [
    "status",
    "tag"
  ],
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "WORKING",
        "NEED_PEER",
        "PROPOSED",
        "READY_TO_SOLVE",
        "REVISED",
        "SOLVED"
      ]
    },
    "tag": {
      "type": "string",
      "pattern": "^\\[(CONTACT|SOLVED)\\]$"
    },
    "content": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": true
    },
    "final_solution": {
      "type": "object",
      "required": [
        "canonical_text"
      ],
      "properties": {
        "canonical_text": {
          "type": "string",
          "pattern": "^-?\\d+(?:\\.\\d+)?$",
          "minLength": 1
        },
        "sha256": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": true
    },
    "artifact": {
      "type": [
        "object",
        "null"
      ]
    },
    "role": {
      "type": [
        "string",
        "null"
      ]
    },
    "domain": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "additionalProperties": true,
  "allOf": [
    {
      "if": {
        "properties": {
          "status": {
            "const": "SOLVED"
          }
        }
      },
      "then": {
        "required": [
          "final_solution"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "tag": {
            "const": "[SOLVED]"
          }
        }
      },
      "then": {
        "required": [
          "final_solution"
        ]
      }
    }
  ]
}
